{
    "name": "whatsapp-clone/messaging-platform",
    "description": "Plateforme de messaging style WhatsApp avec stockage XML",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "php-webdriver/webdriver": "^1.15",
        "phpunit/phpunit": "^10.0",
        "symfony/dom-crawler": "^6.0",
        "symfony/css-selector": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "WhatsApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhatsApp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }